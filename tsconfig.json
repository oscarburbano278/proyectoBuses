{
    "version": "4.6.4",
    "compilerOptions": {
      "lib": ["ESNext"],
      "outDir": "dist",
      "sourceMap": true,
      "target": "ES2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "alwaysStrict": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "compileOnSave": true,
    "exclude": ["./src/**/*.test.ts", "./src/**/*.mock.ts"],
    "include": ["./src/**/*"]
  }
  